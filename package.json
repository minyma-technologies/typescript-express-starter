{
  "name": "typescript-express-prisma-starter",
  "version": "0.0.1",
  "description": "Minyma starter template for a Typescript, Express application with development tools preconfigured",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc",
    "test": "NODE_ENV=test jest -i test/**/*.spec.ts",
    "coverage": "NODE_ENV=test jest test/**/*.spec.ts --coverage",
    "lint": "eslint . --ext .ts --quiet && prettier --check .",
    "lint:fix": "eslint . --ext .ts --fix --quiet && prettier --write .",
    "start:dev": "NODE_ENV=dev tsx watch src/main.ts",
    "start:prod": "npm run build && NODE_ENV=prod node dist/src/main.js",
    "commit": "cz",
    "prepare": "husky install"
  },
  "author": "godraadam",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "bcrypt": "^5.1.0",
    "config": "^3.3.8",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/cz-commitlint": "^17.3.0",
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "^8.28.0",
    "husky": "^8.0.2",
    "inquirer": "^8.2.5",
    "jest": "^29.3.1",
    "jest-mock-extended": "^3.0.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.0",
    "prisma": "^4.6.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.1",
    "typescript": "^4.9.3"
  },
  "packageManager": "^npm@8.1.0",
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "node_modules/",
      "dist/"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/default",
    "clearMocks": true,
    "setupFilesAfterEnv": [
      "./test/mocks/prisma.mock.ts"
    ]
  }
}
